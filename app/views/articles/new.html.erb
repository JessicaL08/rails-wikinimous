<div>
  <h1>Creat a new Article</h1>
  <br>

    <%= form_with model: @article do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>
      <%= f.label :content %>
      <%= f.text_field :content %>
      <%= f.submit %>
      <%= link_to "!!!  Back to the list   !!!", tasks_path %>
    <% end %>
</div>
